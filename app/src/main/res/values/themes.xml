<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUserSub3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.GithubUserSub3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GithubUserSub3.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GithubUserSub3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text Styling  -->

    <style name="TextContent">
        <item name="color">@color/onPrimaryColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  Text Muted  -->
    <style name="TextContent.TextMuted">
        <item name="android:textColor">@color/textMuted</item>
    </style>

    <!--  Text Muted Card  -->
    <style name="TextContent.TextMuted.Card">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--  User Detail Info Layout  -->
    <style name="UserDetailInfoLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--  User Detail Info Styling  -->
    <style name="UserDetailInfoContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  User Detail Text Styling  -->

    <style name="TextContent.UserDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!--  Text Muted  -->
    <style name="TextContent.TextMuted.UserDetail">
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>

    <style name="TextContent.UserDetail.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Splash Screen Styling -->

    <style name="SplashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>